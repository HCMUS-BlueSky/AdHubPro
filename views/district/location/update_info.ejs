<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <form method="POST" id="form" class="card bg-light mb-1" enctype="multipart/form-data">
    <div class="card-body p-3">
      <h4 class="card-title py-3 fw-semibold">Yêu cầu cập nhật thông tin</h4>
      <div class="d-flex flex-column px-3 mb-3">
        <label for="" class="form-label"
          >Địa điểm</label
        >
        <div
          class="d-flex flex-row gap-4 align-items-start text-secondary w-100"
        >
          <input
            type="text"
            class="form-control w-auto flex-grow-1"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Địa chỉ"
            name="address"
            value="<%= location.address %>"
          />
          <input
            type="text"
            class="form-control w-auto"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Phường"
            name="ward"
            value="<%= location.ward %>"
          />
          <input
            type="text"
            class="form-control w-auto"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Quận"
            name="district"
            value="<%= location.district %>"
          />
        </div>
      </div>

      <div class="d-flex px-3 mb-3 gap-5">
        <div class="">
          <label for="method_select" class="form-label"
            >Hình thức quảng cáo</label
          >
          <select
            class="form-select text-secondary w-auto"
            name="method"
            id="method_select"
          >
            <% if(!location?.availableMethod) {%>
              <option value="" selected> >Vui lòng chọn</option>
            <% } else {%>
              <% location?.availableMethod?.forEach((method, index) => { %>
                <option value="<%= method %>" <%= location.method === method ? 'selected' : ''%> ><%= method %></option>
              <% })%>
            <% }%>
          </select>
        </div>
        <div class="">
          <label for="type_select" class="form-label"
            >Loại vị trí</label
          >
          <select
            class="form-select text-secondary w-auto"
            name="type"
            id="type_select"
          >
            <% if(!location?.availableType) {%>
              <option value="" selected> >Vui lòng chọn</option>
            <% } else {%>
              <% location?.availableType?.forEach((type, index) => { %>
                <option value="<%= type %>" <%= location.type === type ? 'selected' : ''%> ><%= type %></option>
              <% })%>
            <% }%>
          </select>
        </div>
      </div>
      <div class="px-3 gap-5">
        <label for="file_inp" class="form-label"
          >Hình ảnh thực tế
        </label>
        <div class="input-group input-daterange">
          <input
            type="file"
            class="form-control text-secondary"
            id="file_inp"
            placeholder="Chưa có file được chọn"
            aria-describedby="fileHelpId"
            multiple
            name="images"
          />
        </div>
      </div>
      <div class="px-3 gap-5">
        <label for="text-area" class="form-label pt-3">Lý do chỉnh sửa<span class="text-danger"> *</span></label>
        <textarea name="content" class="form-control" id="text-area" rows="4" placeholder="Lý do chỉnh sửa ..." value=""></textarea>
      </div>
      <div
        class="d-flex flex-row justify-content-center align-items-center gap-4 pt-5"
      >
        <a
          name=""
          id=""
          class="btn btn-secondary px-4"
          href="/district/location/"
          role="button"
          >Trở về danh sách</a
        >
        <button
          type="button"
          name=""
          id=""
          class="btn btn-primary px-4"
          data-bs-toggle="modal"
          data-bs-target="#confirmModal"
        >
          Gửi yêu cầu
        </button>
      </div>
    </div>
  </form>
</div>
<!--Alert-->
<div
  class="modal fade"
  id="confirmModal"
  tabindex="-1"
  aria-labelledby="confirmModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="confirmModalLabel">Xác nhận</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn gửi yêu cầu thay đổi?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Đóng
        </button>
        <button type="button" class="btn btn-primary" id="submit-btn">
          Gửi yêu cầu
        </button>
      </div>
    </div>
  </div>
</div>
<script>
  document.getElementById("submit-btn").addEventListener("click", () => {
    form.submit();
  });
</script>