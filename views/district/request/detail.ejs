<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <div class="card bg-light mb-3">
    <!-- <div class="card-header">Xử lý báo cáo</div> -->
    <div class="card-body p-4">
      <h4 class="card-title py-2"><%= request.ads.type %></h4>
      <p class="text-muted">
        Khu vực: Phường <%= request.ads.location.ward %>, Quận <%= request.ads.location.district %>
      </p>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Địa chỉ:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <%= (request.ads.location.address.length > 100 ? request.ads.location.address.substring(0, 100) +
            '...' : request.ads.location.address) %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Kích thước bảng:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <%= request.ads.size %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Thông tin công ty:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <%= request.company.name %> - <%= request.company.address %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Thời hạn hợp đồng:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <%= moment(request.ads.effective).format('DD-MM-YYYY') %> đến <%= moment(request.ads.expiration).format('DD-MM-YYYY') %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Thông tin liên lạc:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <%= request.company.email %> - <%= request.company.phone %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Trạng thái xét duyệt:</p>
        </div>
        <div class="col-10">
          <p class="pt-3">
            <% if (request.status === 'pending') { %>
              <span class="badge bg-warning">Chờ duyệt</span> 
            <% } else if (request.status === 'accepted') { %>
              <span class="badge bg-success">Đã duyệt</span> 
            <% } else { %>
              <span class="badge bg-danger">Không duyệt</span> 
            <% } %>
          </p>
        </div>
      </div>
      <div class="row border border-2 rounded mb-3">
        <div class="col-2">
          <p class="text-muted pt-3">Nội dung quảng cáo:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"><%= request.description %></p>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <a href="/district/request">
          <button type="button" class="btn btn-secondary me-4">Trở về</button>
        </a>
        <button
          type="button"
          class="btn btn-primary me-4"
          data-bs-toggle="modal"
          data-bs-target="#imageSlideShow"
          <%= request.ads.images.length ? "" : "disabled" %>
        >
          Xem tất cả hình
        </button>
        <button
          type="button"
          class="btn btn-danger me-4"
          data-bs-toggle="modal"
          data-bs-target="#cancelRequest"
          <%= request.status !== 'pending' ? "disabled" : "" %>
        >
          Hủy yêu cầu
        </button>
      </div>
    </div>
  </div>
</div>
<form method="POST" action="../<%= request._id %>/cancel" id="cancelForm" style="display: none;"></form>
<div
  class="modal fade"
  id="imageSlideShow"
  aria-hidden="true"
  aria-labelledby="imageSlideShow"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body modal-info-detail">
        <div id="slide" class="carousel slide" data-bs-ride="carousel">
          <!-- Indicators/dots -->
          <div class="carousel-indicators">
            <% request.ads.images.forEach((img, index) => { %>
              <button
                type="button"
                data-bs-target="#slide"
                data-bs-slide-to="<%= index %>"
                class="<%= index == 0 ? 'active' : '' %>"
              ></button>
            <% }) %>
          </div>

          <!-- The slideshow/carousel -->
          <div class="carousel-inner">
            <% request.ads.images.forEach((img, index) => { %>
              <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                <img
                  src="<%= img %>"
                  alt="image-<%= index %>"
                  class="d-block"
                  style="width: 100%"
                  loading="lazy"
                />
              </div>
            <% }) %>
          </div>

          <!-- Left and right controls/icons -->
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#slide"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#slide"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
        <div class="container-fluid mt-3">
          <p class="text-center">Địa điểm</p>
          <p class="text-center">
            Khu vực: Phường <%= request.ads.location.ward %>, Quận <%= request.ads.location.district %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div
  class="modal fade"
  id="cancelRequest"
  tabindex="-1"
  aria-labelledby="cancelRequestLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="cancelRequestLabel">Xác nhận</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">Bạn có chắc chắn muốn hủy bỏ yêu cầu này?</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Đóng
        </button>
        <button type="button" class="btn btn-danger" id="delete-btn">Có</button>
      </div>
    </div>
  </div>
</div>
<script>
  document.getElementById("delete-btn").addEventListener("click", () => {
    cancelForm.submit();
  });
</script>