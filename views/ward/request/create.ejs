<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <div class="card bg-light mb-3">
    <form class="card-body p-4">
      <h2 class="fw-semibold mb-3">Yêu cầu cấp phép</h2>
      <h4>Thông tin bảng quảng cáo</h4>
      <div class="row mt-3">
        <div class="col-8">
          <label for="place" class="form-label">Địa điểm</label>
          <select class="form-select" aria-label="">
            <% locations.forEach(location => { %>
            <option value="<%= location._id %>"><%= location.address %></option>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-6">
          <label for="method_select" class="form-label"
            >Loại bảng quảng cáo</label
          >
          <select
            class="form-select text-secondary w-100"
            name="type"
            id="method_select"
          >
            <option>Vui lòng chọn</option>
            <option value="Trụ bảng hiflex">Trụ bảng hiflex</option>
            <option value="Trụ màn hình điện tử LED">
              Trụ màn hình điện tử LED
            </option>
            <option value="Trụ hộp đèn">Trụ hộp đèn</option>
            <option value="Bảng hiflex ốp tường">Bảng hiflex ốp tường</option>
            <option value="Màn hình điện tử ốp tường">
              Màn hình điện tử ốp tường
            </option>
            <option value="Trụ treo băng rôn dọc">Trụ treo băng rôn dọc</option>
            <option value="Trụ treo băng rôn ngang" %>
              >Trụ treo băng rôn ngang
            </option>
            <option value="Trụ/Cụm pano">Trụ/Cụm pano</option>
            <option value="Cổng chào">Cổng chào</option>
            <option value="Trung tâm thương mại">Trung tâm thương mại</option>
          </select>
        </div>
        <div class="col-6">
          <label for="adsSize" class="form-label"
            >Kích thước bảng quảng cáo</label
          >
          <input
            type="text"
            class="form-control w-100"
            required
            id="adsSize"
            aria-describedby="helpId"
            placeholder="2.5m x 10m"
            name="size"
            value=""
          />
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-6">
          <label for="" class="form-label">Hình thức quảng cáo</label>
          <select
            class="form-select text-secondary w-100"
            name="type"
            id="method_select"
          >
            <option>Vui lòng chọn</option>
            <option value="Cổ động chính trị">Cổ động chính trị</option>
            <option value="Quảng cáo thương mại">Quảng cáo thương mại</option>
            <option value="Xã hội hóa">Xã hội hóa</option>
          </select>
        </div>
        <div class="col-6">
          <label for="amount" class="form-label">Số lượng</label>
          <input
            type="number"
            class="form-control"
            id="amount"
            placeholder="1"
            min="1"
            value="1"
          />
        </div>
      </div>
      <div class="row my-3">
        <div class="col-8">
          <div class="form-group">
            <label for="ads-content" class="form-label"
              >Nội dung quảng cáo</label
            >
            <textarea class="form-control" id="ads-content" rows="3"></textarea>
          </div>
        </div>
        <div class="col-4">
          <label for="ads-image" class="form-label">Hình ảnh minh họa</label>
          <input class="form-control" type="file" id="ads-image" multiple />
        </div>
      </div>
      <h4>Thông tin công ty</h4>
      <div class="row mb-3">
        <div class="col-6">
          <label for="companyName" class="form-label">Tên công ty</label>
          <input
            type="text"
            class="form-control"
            id="companyName"
            placeholder=""
          />
        </div>
        <div class="col-6">
          <label for="companyEmail" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="companyEmail"
            placeholder="abc@gmail.com"
          />
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-8">
          <label for="companyAddress" class="form-label">Địa chỉ</label>
          <input
            type="text"
            class="form-control"
            id="companyAddress"
            placeholder=""
          />
        </div>
        <div class="col-4">
          <label for="companyPhone" class="form-label">Số điện thoại</label>
          <input
            type="number"
            class="form-control"
            id="companyPhone"
            placeholder=""
          />
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-6">
          <label for="date" class="form-label">Thời hạn hợp đồng</label>
          <div class="input-group input-daterange" id="date">
            <input type="date" class="form-control text-secondary" />
            <div class="input-group-text">to</div>
            <input type="date" class="form-control text-secondary" />
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <a href="/ward/request">
          <button type="button" class="btn btn-secondary me-4">Trở về</button>
        </a>
        <a>
          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#confirmModal"
          >
            Gửi yêu cầu
          </button>
        </a>
      </div>
    </form>
    <!--Alert-->
    <div
      class="modal fade"
      id="confirmModal"
      tabindex="-1"
      aria-labelledby="confirmModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="confirmModalLabel">Xác nhận</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Bạn có chắc chắn muốn gửi yêu cầu cấp phép này?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
            <button type="button" class="btn btn-primary" id="submit-btn">
              Xác nhận
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
