
      <!-- Right Part -->
      <div class="col p-3 border-start">
        <div class="user-info d-flex justify-content-end">
          <i class="bi bi-person-circle" style="font-size: 36px"></i>
          <div class="user-text ms-3">
            <h6>Elijah Scott</h6>
            <p class="text-muted">elijarscott@gmail.com</p>
          </div>
        </div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/ward/request" class="text-decoration-none text-muted"
                >Yêu cầu cấp phép</a
              >
            </li>
            <li
              class="breadcrumb-item active text-dark fw-semibold"
              aria-current="page"
            >
              Thông tin chi tiết
            </li>
          </ol>
        </nav>
        <hr />
        <div class="card bg-light mb-3">
          <!-- <div class="card-header">Xử lý báo cáo</div> -->
          <div class="card-body p-4">
            <h4 class="card-title py-2">Tên bảng quảng cáo, địa chỉ</h4>
            <p class="text-muted">Khu vực: Phường <%= request.ward %>, Quận <%= request.district %></p>
            <div class="row border border-2 rounded">
              <div class="col-2">
                <p class="text-muted pt-3">Thông tin công ty:</p>
              </div>
              <div class="col-10">
                <p class="pt-3"><%= request.company_name %> - <%= request.company_code %> - <%= request.company_address %></p>
              </div>
            </div>
            <div class="row border border-2 rounded">
              <div class="col-2">
                <p class="text-muted pt-3">Thời hạn hợp đồng:</p>
              </div>
              <div class="col-10">
                <p class="pt-3"><%= request.start_date %> - <%= request.end_date %></p>
              </div>
            </div>
            <div class="row border border-2 rounded">
              <div class="col-2">
                <p class="text-muted pt-3">Thông tin liên lạc:</p>
              </div>
              <div class="col-10">
                <p class="pt-3"><%= request.company_email %> - <%= request.company_phone %></p>
              </div>
            </div>
            <div class="row border border-2 rounded">
              <div class="col-2">
                <p class="text-muted pt-3">Trạng thái xử lý:</p>
              </div>
              <div class="col-10">
                <p class="pt-3">
                <% if (request.accepted) { %> Đã duyệt <% } else { %> Chưa duyệt <% } %>
              </p>
              </div>
            </div>
            <div class="row border border-2 rounded mb-3">
              <div class="col-2">
                <p class="text-muted pt-3">Nội dung báo cáo:</p>
              </div>
              <div class="col-10">
                <p class="pt-3">
                  <%= request.description %> 
                </p>
              </div>
            </div>

            <div class="d-flex justify-content-center">
              <a href="/ward/request">
                <button type="button" class="btn btn-secondary me-4">
                  Trở về
                </button>
              </a>
              <button
                type="button"
                class="btn btn-primary me-4"
                data-bs-toggle="modal"
                data-bs-target="#detail"
              >
                Xem tất cả hình
              </button>
            </div>
          </div>
        </div>
      </div>

  <div
    class="modal fade"
    id="detail"
    data-bs-backdrop="static"
    aria-hidden="true"
    aria-labelledby="detail"
    tabindex="-1"
  >
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body modal-info-detail">
          <div id="demo" class="carousel slide" data-bs-ride="carousel">
            <!-- Indicators/dots -->
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#demo"
                data-bs-slide-to="0"
                class="active"
              ></button>
              <button
                type="button"
                data-bs-target="#demo"
                data-bs-slide-to="1"
              ></button>
              <button
                type="button"
                data-bs-target="#demo"
                data-bs-slide-to="2"
              ></button>
            </div>

            <!-- The slideshow/carousel -->
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="../../images/ads1.jpg"
                  alt="ads-1"
                  class="d-block"
                  style="width: 100%"
                />
              </div>
              <div class="carousel-item">
                <img
                  src="../../images/ads2.jpg"
                  alt="ads-2"
                  class="d-block"
                  style="width: 100%"
                />
              </div>
              <div class="carousel-item">
                <img
                  src="../../images/ads3.jpg"
                  alt="ads-3"
                  class="d-block"
                  style="width: 100%"
                />
              </div>
            </div>

            <!-- Left and right controls/icons -->
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#demo"
              data-bs-slide="prev"
            >
              <span class="carousel-control-prev-icon"></span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#demo"
              data-bs-slide="next"
            >
              <span class="carousel-control-next-icon"></span>
            </button>
          </div>
          <div class="container-fluid mt-3">
            <p class="text-center">Địa điểm</p>
            <p class="text-center">Khu vực: Phường 3, Quận 10</p>
          </div>
        </div>
      </div>
    </div>
  </div>
