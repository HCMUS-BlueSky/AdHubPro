<div class="col p-3 border-start">
  <%- include('../partials/header.ejs') %>
  <hr />
  <%- include('../partials/flash.ejs') %>
  <h2 class="fw-semibold">Đổi mật khẩu</h2>
  <div class="d-flex justify-content-center">
    <div class="card bg-light mb-3 p-3" style="width: 40%">
      <div class="form-group mb-3">
        <label for="" class="mb-1">Mật khẩu hiện tại</label>
        <input
          type="password"
          class="form-control"
          placeholder="Nhập mật khẩu hiện tại"
        />
      </div>
      <div class="form-group mb-3">
        <label for="" class="mb-1">Mật khẩu mới</label>
        <input
          type="password"
          class="form-control"
          placeholder="Nhập mật khẩu mới"
        />
      </div>
      <div class="form-group mb-3">
        <label for="" class="mb-1">Nhập lại mật khẩu mới</label>
        <input
          type="password"
          class="form-control"
          placeholder="Nhập lại mật khẩu mới"
        />
      </div>
      <button type="submit" class="btn btn-info">Lưu thay đổi</button>
    </div>
  </div>
</div>
