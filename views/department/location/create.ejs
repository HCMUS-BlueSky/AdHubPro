<!-- Right Part -->
<div class="col p-3 border-start">
  <div class="user-info d-flex justify-content-end">
    <i class="bi bi-person-circle" style="font-size: 36px"></i>
    <div class="user-text ms-3">
      <h6>Elijah Scott</h6>
      <p class="text-muted">elijarscott@gmail.com</p>
    </div>
  </div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href=".." class="text-decoration-none text-muted"
          >Điểm đặt quảng cáo</a
        >
      </li>
      <li
        class="breadcrumb-item active text-dark fw-semibold"
        aria-current="page"
      >
        Thêm điểm đặt
      </li>
    </ol>
  </nav>
  <hr />
  <div class="card bg-light mb-1">
    <div class="card-body p-3">
      <h4 class="card-title py-3 fw-semibold">Thêm điểm đặt quảng cáo</h4>
      <div class="d-flex flex-column px-3 mb-3">
        <label for="" class="form-label"
          >Địa điểm<span class="text-danger"> *</span></label
        >
        <div
          class="d-flex flex-row gap-4 align-items-start text-secondary w-100"
        >
          <input
            type="text"
            class="form-control w-auto flex-grow-1"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Địa chỉ"
          />
          <input
            type="text"
            class="form-control w-auto"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Phường"
          />
          <input
            type="text"
            class="form-control w-auto"
            required
            id=""
            aria-describedby="helpId"
            placeholder="Quận"
          />
        </div>
      </div>

      <div class="d-flex px-3 mb-3 gap-5">
        <div class="">
          <label for="" class="form-label"
            >Loại vị trí<span class="text-danger"> *</span></label
          >
          <select
            class="form-select text-secondary w-auto"
            name=""
            id="method_select"
          >
            <option selected>Vui lòng chọn</option>
            <option value="">Đất công</option>
            <option value="">Công viên</option>
            <option value="">Hành lang an toàn giao thông, Đất tư nhân</option>
            <option value="">
              Nhà ở riêng lẻ, Trung tâm thương mại, Chợ, Cây xăng, Nhà chờ xe
              buýt
            </option>
          </select>
        </div>
        <div class="">
          <label for="" class="form-label"
            >Hình thức quảng cáo<span class="text-danger"> *</span></label
          >
          <select
            class="form-select text-secondary w-auto"
            name=""
            id="method_select"
          >
            <option selected>Vui lòng chọn</option>
            <option value="">Cổ động chính trị</option>
            <option value="">Quảng cáo thương mại</option>
            <option value="">Xã hội hoá</option>
          </select>
        </div>
      </div>

      <div class="d-flex px-3 gap-5">
        <div>
          <label for="" class="form-label"
            >Hình thức quảng cáo<span class="text-danger"> *</span></label
          >
          <div class="form-check pb-1">
            <input
              class="form-check-input"
              type="radio"
              name="flexRadioDefault"
              id="flexRadioDefault1"
            />
            <label
              class="form-check-label text-secondary"
              for="flexRadioDefault1"
            >
              Chưa quy hoạch
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="flexRadioDefault"
              id="flexRadioDefault2"
              checked
            />
            <label
              class="form-check-label text-secondary"
              for="flexRadioDefault2"
            >
              Đã quy hoạch
            </label>
          </div>
        </div>
        <div>
          <label for="" class="form-label"
            >Số lượng điểm đặt quảng cáo<span class="text-danger">
              *</span
            ></label
          >
          <input
            type="text"
            class="form-control w-auto"
            required
            id=""
            aria-describedby="helpId"
            placeholder="1"
          />
        </div>
      </div>
      <div class="px-3 gap-5">
        <label for="file_inp" class="form-label pt-3"
          >Hình ảnh thực tế<span class="text-danger"> *</span></label
        >
        <div class="input-group input-daterange">
          <input
            type="file"
            class="form-control text-secondary"
            id="file_inp"
            placeholder="Chưa có file được chọn"
            aria-describedby="fileHelpId"
            multiple
          />
        </div>
      </div>
      <div
        class="d-flex flex-row justify-content-center align-items-center gap-4 pt-5"
      >
        <a name="" id="" class="btn btn-secondary px-4" href="." role="button"
          >Trở về danh sách</a
        >
        <button
          type="button"
          name=""
          id=""
          class="btn btn-primary px-4"
          data-bs-toggle="modal"
          data-bs-target="#removeLocation"
        >
          Thêm điểm đặt mới
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="removeLocation"
  aria-hidden="true"
  aria-labelledby="removeLocation"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Xác nhận</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <p>Bạn có chắc chắn muốn thêm điểm đặt này?</p>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
            Có
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
