<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <div class="row">
    <div class="col-8"></div>
    <div class="col-4">
      <div class="card bg-light mb-1">
        <div class="card-body p-3">
          <h4 class="card-title py-3 fw-semibold">Thêm điểm đặt quảng cáo</h4>
          <div class="d-flex flex-column px-3 mb-3">
            <label for="" class="form-label"
              >Địa điểm<span class="text-danger"> *</span></label
            >
            <div
              class="d-flex flex-row gap-4 align-items-start text-secondary w-100"
            >
              <input
                type="text"
                class="form-control w-auto flex-grow-1"
                required
                id=""
                aria-describedby="helpId"
                placeholder="Địa chỉ"
              />
            </div>
          </div>

          <div class="d-flex flex-column px-3 mb-3">
            <label for="" class="form-label"
              >Loại vị trí<span class="text-danger"> *</span></label
            >
            <select
              class="form-select text-secondary w-auto"
              name=""
              id="type_select"
            >
              <% if(!availableType) {%>
              <option value="" selected>>Vui lòng chọn</option>
              <% } else {%> <% availableType?.forEach((type, index) => { %>
              <option value="<%= type %>"><%= type %></option>
              <% })%> <% }%>
            </select>
          </div>
          <div class="d-flex flex-column px-3 mb-3">
            <label for="" class="form-label"
              >Hình thức quảng cáo<span class="text-danger"> *</span></label
            >
            <select
              class="form-select text-secondary w-auto"
              name=""
              id="method_select"
            >
              <% if(!availableMethod) {%>
              <option value="" selected>>Vui lòng chọn</option>
              <% } else {%> <% availableMethod?.forEach((method, index) => { %>
              <option value="<%= method %>"><%= method %></option>
              <% })%> <% }%>
            </select>
          </div>
          <div class="px-3 gap-5">
            <label for="file_inp" class="form-label pt-3"
              >Hình ảnh thực tế</label
            >
            <div class="input-group input-daterange">
              <input
                type="file"
                class="form-control text-secondary"
                id="file_inp"
                placeholder="Chưa có file được chọn"
                aria-describedby="fileHelpId"
                multiple
              />
            </div>
          </div>
          <div
            class="d-flex flex-row justify-content-center align-items-center gap-4 pt-5"
          >
            <a
              name=""
              id=""
              class="btn btn-secondary px-4"
              href="/department/location"
              role="button"
              >Trở về</a
            >
            <button
              type="button"
              name=""
              id=""
              class="btn btn-primary px-4"
              data-bs-toggle="modal"
              data-bs-target="#addLocation"
            >
              Thêm
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<form method="POST" id="createForm" style="display: none"></form>

<!-- Modal -->
<div
  class="modal fade"
  id="addLocation"
  aria-hidden="true"
  aria-labelledby="addLocation"
  tabindex="-1"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Xác nhận</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <p>Bạn có chắc chắn muốn thêm điểm đặt này?</p>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Đóng
          </button>
          <button type="button" class="btn btn-primary" id="create-btn">
            Có
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.getElementById("create-btn").addEventListener("click", () => {
    createForm.submit();
  });
</script>
