<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <div class="card bg-light mb-3">
    <div class="card-body p-4">
      <h4 class="card-title py-2 fw-semibold">Tạo tài khoản</h4>
      <form method="POST" id="form" class="d-flex flex-column pb-4">
        <div class="row py-3">
          <div class="col-5">
            <label for="" class="form-label"
              >Họ tên<span class="text-danger"> *</span></label
            >
            <input type="text" class="form-control" placeholder="Họ tên" name="fullname"/>
          </div>
          <div class="col-3">
            <label for="" class="form-label"
              >Ngày sinh<span class="text-danger"> *</span></label
            >
            <input type="date" class="form-control text-secondary" name="birthdate" />
          </div>
          <div class="col-3">
            <label for="" class="form-label d-block"
              >Giới tính<span class="text-danger"> *</span></label
            >
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                id="inlineRadio1"
                value="male"
              />
              <label class="form-check-label" for="inlineRadio1">Nam</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                id="inlineRadio2"
                value="female"
              />
              <label class="form-check-label" for="inlineRadio2">Nữ</label>
            </div>
          </div>
        </div>
        
        <div class="row py-3">
          <div class="col-5">
            <label for="" class="form-label"
              >Số điện thoại<span class="text-danger"> *</span></label
            >
            <input
              type="phone"
              class="form-control"
              required
              id=""
              aria-describedby="helpId"
              placeholder="Số điện thoại"
              name="phone"
            />
          </div>
          <div class="col-5">
            <label for="" class="form-label"
              >CMND/CCCD<span class="text-danger"> *</span></label
            >
            <input
              type="text"
              class="form-control"
              required
              id=""
              aria-describedby="helpId"
              name="identity_code"
              placeholder="CMND/CCCD"
            />
          </div>
        </div>

        <div class="row py-3">
          <div class="col-5">
            <label for="" class="form-label"
              >Email<span class="text-danger"> *</span></label
            >
            <input
              type="email"
              class="form-control"
              required
              id=""
              aria-describedby="helpId"
              placeholder="Email"
              name="email"
            />
          </div>
          <div class="col-5">
            <label for="" class="form-label"
              >Password<span class="text-danger"> *</span></label
            >
            <input
              type="password"
              class="form-control"
              required
              id=""
              aria-describedby="helpId"
              placeholder="Password"
              name="password"
            />
          </div>
        </div>

        <div class="row py-3">
          <div class="col-2">
            <label for="" class="form-label"
              >Chức vụ<span class="text-danger"> *</span></label
            >
            <div class="form-check py-2">
              <input
                class="form-check-input"
                type="radio"
                name="role"
                id="exampleRadios1"
                value="ward_officer"
                checked
              />
              <label class="form-check-label" for="exampleRadios1">
                Cán bộ phường
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="role"
                id="exampleRadios2"
                value="district_officer"
              />
              <label class="form-check-label" for="exampleRadios2">
                Cán bộ quận
              </label>
            </div>
          </div>
          <div class="col-4">
            <label for="" class="form-label"
              >Quận</label
            >
            <select class="form-select" aria-label="Default select example">
              <option selected>Chọn quận</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
          </div>
          <div class="col-4">
            <label for="" class="form-label"
              >Phường</label
            >
            <select class="form-select" aria-label="Default select example">
              <option selected>Chọn phường</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
          </div>
        </div>

        <div
          class="d-flex flex-row justify-content-center align-items-center gap-4 pt-5"
        >
          <a name="" id="" class="btn btn-secondary px-4" href="." role="button"
            >Trở về</a
          >
          <a name="" id="" class="btn btn-primary px-4" href="#" role="button"
            >Tạo tài khoản</a
          >
        </div>
      </form>
    </div>
  </div>
</div>
