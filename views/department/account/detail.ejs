<!-- Right Part -->
<div class="col p-3 border-start">
  <%- include('../../partials/header.ejs') %>
  <hr />
  <div class="card bg-light mb-3">
    <!-- <div class="card-header">Xử lý báo cáo</div> -->
    <div class="card-body p-4">
      <h4 class="card-title py-2">Tài khoản</h4>
      <p class="text-muted">Chức vụ:</p>
      <p class="text-muted">Khu vực:</p>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Họ tên:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"><%= account.fullname %></p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Giới tính:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"></p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Email:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"><%= account.email %></p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Ngày sinh:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"></p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Số điện thoại:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"><%= account.phone %></p>
        </div>
      </div>
      <div class="row border border-2 rounded">
        <div class="col-2">
          <p class="text-muted pt-3">Số CMND/CCCD:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"></p>
        </div>
      </div>
      <div class="row border border-2 rounded mb-3">
        <div class="col-2">
          <p class="text-muted pt-3">Mật khẩu:</p>
        </div>
        <div class="col-10">
          <p class="pt-3"></p>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <a href="/department/account">
          <button type="button" class="btn btn-secondary me-4">Trở về</button>
        </a>
        <a href="/department/account/update-info/<%= account._id %>">
          <button
            type="button"
            class="btn btn-primary me-4"
            data-bs-toggle="modal"
            data-bs-target="#detail"
          >
            Cập nhật thông tin
          </button>
        </a>
        <a href="/department/account/assign/<%= account._id %>">
          <button type="button" class="btn btn-primary">
            Phân công khu vực
          </button>
        </a>
      </div>
    </div>
  </div>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"
></script>
