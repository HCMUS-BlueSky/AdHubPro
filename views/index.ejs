<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AdHubPro</title>
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Mapbox CSS -->
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css"
      rel="stylesheet"
    />
    <!-- Tiny -->
    <script
      src="https://cdn.tiny.cloud/1/9eza4vy0528u7nwcd7xg321gt9gk94fhc6j1c49lhsvqa7gt/tinymce/6/tinymce.min.js"
      referrerpolicy="origin"
    ></script>
    <script>
      tinymce.init({
        selector: "#report-content",
      });
    </script>
    <!-- Mapbox -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js"></script>
    <link rel="stylesheet" href="/css/global.css" />
    <!-- CSS -->
    <link href="/css/map/style.css" rel="stylesheet" type="text/css" />
    <link href="/css/map/guest.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <!-- Load the `mapbox-gl-geocoder` plugin. -->
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
    <link
      rel="stylesheet"
      href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css"
      type="text/css"
    />

    <!-- Map Part -->
    <div id="map">
      <div id="sidebar" class="sidebar flex-center left collapsed">
        <div
          class="sidebar-content rounded-rect d-flex flex-column align-items-center"
        >
          <div class="nav-table row my-3 border-bottom">
            <div class="col text-center">
              <button class="info-btn nav-btn">
                <h6 class="text-muted">Thông tin</h6>
              </button>
            </div>
            <div class="col text-center">
              <button class="report-btn nav-btn">
                <h6 class="text-muted">Báo cáo</h6>
              </button>
            </div>
          </div>
          <div
            class="sidebar-toggle rounded-rect left"
            onclick="toggleSidebar()"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-arrow-right"
              viewBox="0 0 16 16"
            >
              <path
                fill-rule="evenodd"
                d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
              />
            </svg>
          </div>
        </div>
      </div>
      <div class="switch-table">
        <div class="form-check form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="adsSwitch"
            checked
          />
          <label class="form-check-label" for="adsSwitch">Bảng quảng cáo</label>
        </div>
        <div class="form-check form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="reportSwitch"
            checked
          />
          <label class="form-check-label" for="reportSwitch"
            >Báo cáo vi phạm</label
          >
        </div>
      </div>
    </div>

    <!-- Modal section -->
    <div
      class="modal fade"
      id="feedback"
      data-bs-backdrop="static"
      aria-hidden="true"
      aria-labelledby="feedbackLabel"
      tabindex="-1"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form class="report-modal">
              <div class="row">
                <div class="col-7 d-flex flex-column">
                  <h3>Thông tin người báo cáo</h3>
                  <div class="mb-2">
                    <label for="name" class="col-form-label">Họ và tên</label>
                    <input
                      type="text"
                      value=""
                      class="form-control"
                      id="name"
                      placeholder="Họ và tên"
                    />
                  </div>
                  <div class="mb-2">
                    <label for="email" class="col-form-label">Email</label>
                    <input
                      type="email"
                      value=""
                      class="form-control"
                      id="email"
                      placeholder="Email"
                    />
                  </div>
                  <div class="mb-2">
                    <label for="phone" class="col-form-label"
                      >Số điện thoại</label
                    >
                    <input
                      type="number"
                      value=""
                      class="form-control"
                      id="phone"
                      placeholder="Số điện thoại"
                    />
                  </div>
                </div>
                <div class="col-5 d-flex flex-column">
                  <h3 class="mb-4">Hình thức báo cáo</h3>
                  <div class="report-radio">
                    <div class="mb-3">
                      <input
                        type="radio"
                        id="option-1"
                        name="method"
                        value="Tố giác sai phạm"
                      />
                      <label for="option-1">Tố giác sai phạm</label><br />
                    </div>
                    <div class="mb-3">
                      <input
                        type="radio"
                        id="option-2"
                        name="method"
                        value="Đăng ký nội dung"
                      />
                      <label for="option-2">Đăng ký nội dung</label><br />
                    </div>
                    <div class="mb-3">
                      <input
                        type="radio"
                        id="option-3"
                        name="method"
                        value="Đóng góp ý kiến"
                      />
                      <label for="option-3">Đóng góp ý kiến</label><br />
                    </div>
                    <div class="mb-3">
                      <input
                        type="radio"
                        id="option-4"
                        name="method"
                        value="Giải đáp thắc mắc"
                      />
                      <label for="option-4">Giải đáp thắc mắc</label><br />
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-3">
                <h3 class="mb-3">Nội dung báo cáo</h3>
                <textarea id="report-content"></textarea>
              </div>
              <div class="row mt-3">
                <h3 class="mb-3">Hình ảnh minh họa</h3>
                <input type="file" name="file" id="file" class="inputfile" />
                <label for="file"></label>
              </div>
              <button class="btn btn-primary" type="submit">Gửi báo cáo</button>
            </form>
          </div>
          <div class="modal-footer"></div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="ads-detail"
      data-bs-backdrop="static"
      aria-hidden="true"
      aria-labelledby="asdDetailLabel"
      tabindex="-1"
    >
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="">THÔNG TIN CHI TIẾT</h3>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body modal-info-detail"></div>
        </div>
      </div>
    </div>

    <script src="/js/form.js"></script>
    <script src="/js/map.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
